@model DotNetBay.WebApp.ViewModel.NewBidViewModel

@{
    ViewBag.Title = "Place Bid";
}

<h2>Place a new bid</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>New Bid View</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AuctionTitle, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Model.AuctionTitle
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AuctionDescription, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Model.AuctionDescription
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartPrice, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Model.StartPrice
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentPrice, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Model.CurrentPrice
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BidAmount, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BidAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BidAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Place Bid" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Auctions")
</div>
